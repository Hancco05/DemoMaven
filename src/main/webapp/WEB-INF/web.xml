<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- Nombre de la aplicación -->
    <display-name>Salud Mental Web</display-name>

    <!-- Declaración del Servlet para la generación del PDF -->
    <servlet>
        <servlet-name>GeneratePdfServlet</servlet-name>
        <servlet-class>com.saludmental.GeneratePdfServlet</servlet-class>
        
    </servlet>

    <!-- Mapeo del Servlet a la URL -->
    <servlet-mapping>
        <servlet-name>GeneratePdfServlet</servlet-name>
        <url-pattern>/generatePdf</url-pattern> <!-- Aquí se asocia la URL con el servlet -->
    </servlet-mapping>

</web-app>
